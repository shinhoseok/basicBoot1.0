<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.basic.user.service.impl.UserMapper">
	
	<sql id="findUserListWhere">
		<where>
			<if test="searchKeyword != null and searchKeyword != ''">
				<choose>
					<when test="searchCondition == 'usrNm'">
						AND NAME LIKE '%'|| #{searchKeyword} ||'%'
					</when>
					<otherwise>
						AND EMAIL LIKE '%'|| #{searchKeyword} ||'%'
					</otherwise>
				</choose>
			</if>
		</where>
	</sql>
	
	<!-- 쿼리명 : 사용자 목록 카운트
	설명 : 사용자 목록 카운트
	수정일                     수정자           수정내용
	==========  ======  ===================
	2024. 10.31             shin           최초 생성
	작성자 : shin 
	최초작성일 : 2024. 10.31
	-->	
	<select id="findUserListCnt" parameterType="userVO" resultType="int">
		<![CDATA[
		SELECT COUNT (*) CNT FROM USERS
		]]>
		<include refid="findUserListWhere"/>
	</select>
	
	<!-- 쿼리명 : 사용자 목록 리스트
	설명 : 사용자 목록 조회
	수정일                     수정자           수정내용
	==========  ======  ===================
	2024. 10.31               shin           최초 생성
	작성자 : shin
	최초작성일 : 2024. 10.31
	-->
	<select id="findUserList" parameterType="userVO" resultType="userVO">
		<![CDATA[
		SELECT A.*
		  FROM (SELECT ROW_NUMBER () OVER (
		]]>
		<choose>
			<when test="sortSubject == 'regDt'">
				ORDER BY reg_dt
			</when>
			<when test="sortSubject == 'name'">
				ORDER BY name
			</when>
			<otherwise>
				ORDER BY user_id
			</otherwise>
		</choose>
		<choose>
			<when test="sortDescend == 'asc'">
				ASC
			</when>
			<otherwise>
				DESC
			</otherwise>
		</choose>
		<![CDATA[
		  			) rowNumber,
				       user_id userId,
				       password,
				       name,
				       phone_number phoneNumber,
				       email,
				       reg_dt regDt
		          FROM USERS
		]]>
		<include refid="findUserListWhere"/>
		<![CDATA[
		          ) A
		 WHERE A.rowNumber BETWEEN #{firstIndex} AND #{lastIndex}
		]]>
	</select>
</mapper>
